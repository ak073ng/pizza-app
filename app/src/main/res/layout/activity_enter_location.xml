<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/location_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img3"
        android:scaleType="centerCrop"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_tint"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:background="@drawable/round_corner_layout"
        android:layout_marginHorizontal="50dp"
        android:padding="20dp"
        android:elevation="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Where are you at"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/tv_enter_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="City"
            android:textColor="@color/light_gray"
            android:textSize="20dp"
            android:background="@drawable/green_border_outline"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tv_enter_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Area"
            android:textColor="@color/light_gray"
            android:textSize="20dp"
            android:background="@drawable/green_border_outline"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btn_to_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:text="Continue"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/green_solid_background"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

</FrameLayout>