<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/location_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:background="@drawable/round_corner_layout"
    android:layout_marginBottom="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/pizza_view_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img3"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingHorizontal="20dp"
        android:orientation="vertical"
        android:background="@drawable/black_gradient_tint">

        <TextView
            android:id="@+id/pizza_view_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pizza name"
            android:textColor="@color/white"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/pizza_view_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="KES 500"
            android:textColor="@color/yellow"
            android:textSize="15sp"/>

    </LinearLayout>

</FrameLayout>